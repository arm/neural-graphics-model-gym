{
    "model": {
        "name": "NSS",
        "version": "1"
    },
    "dataset": {
        "name": "NSS",
        "version": "1",
        "path": {
            "train": null,
            "validation": null,
            "test": null
        },
        "exposure": 2,
        "tonemapper": "reinhard",
        "health_check": false,
        "recurrent_samples": 16,
        "gt_augmentation": true,
        "num_workers": 4,
        "prefetch_factor": 1
    },
    "output": {
        "dir": "./output",
        "export_frame_png": false,
        "tensorboard_output_dir": "./tensorboard-logs",
        "export": {
            "dynamic_shape": true,
            "vgf_output_dir": "./output/vgf"
        }
    },

    "train": {
        "batch_size": 8,
        "scale": 2.0,
        "seed": 123456,
        "perform_validate": true,
        "validate_frequency": 1,
        "finetune": false,
        "resume": false,
        "pretrained_weights": null,
        "loss_fn": "loss_v1",
        "fp32": {
            "number_of_epochs": 15,
            "checkpoints": {
                "dir": "./checkpoints"
            },
            "lr_scheduler": {
                "type": "cosine_annealing",
                "warmup_percentage": 0.05,
                "min_lr": 2e-4
            },
            "optimizer": {
                "optimizer_type": "lars_adam",
                "learning_rate": "2e-3"
            }
        },

        "qat": {
            "number_of_epochs": 2,
            "checkpoints": {
                "dir": "./checkpoints/qat_checkpoints"
            },
            "lr_scheduler": {
                "type": "cosine_annealing",
                "warmup_percentage": 0.05,
                "min_lr": 1e-5
            },
            "optimizer": {
                "optimizer_type": "lars_adam",
                "learning_rate": "2e-3"
            }
        }
    },
    "processing": {
        "shader_accurate": false
    }
}
